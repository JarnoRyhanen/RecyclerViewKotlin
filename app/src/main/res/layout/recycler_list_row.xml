<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/recycler_list_row_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            tools:src="@drawable/ic_android" />

        <TextView
            android:id="@+id/recycler_list_row_text_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/recycler_list_row_image_view"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="line 1" />

        <TextView
            android:id="@+id/recycler_list_row_text_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_list_row_text_view_1"
            android:layout_toEndOf="@id/recycler_list_row_image_view"
            android:textSize="18sp"
            tools:text="line 2" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>